<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/widget_background"
        android:padding="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Approval Status"
            android:textSize="11pt"></TextView>
        <ProgressBar
            android:id="@+id/simpleProgressBar_background"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminateOnly="false"
            android:max="128"
            android:progress="100"

            android:progressDrawable="@drawable/custom_progress_background" />
        <ProgressBar
            android:layout_marginTop="-200dp"
            android:id="@+id/simpleProgressBar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminateOnly="false"
            android:max="128"
            android:progress="65"

            android:progressDrawable="@drawable/custom_progress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="65%"
        android:textStyle="bold"
        android:layout_marginTop="-120dp"
        android:textColor="#2a3a75"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approved Projects"
        android:textSize="9dp"/>
    </LinearLayout>

</RelativeLayout>